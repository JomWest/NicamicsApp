<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NicamicsApp.RegisterPage"
             Title="RegisterPage"
             xmlns:viewmodel="clr-namespace:NicamicsApp.ViewModels"
             x:DataType="viewmodel:RegisterViewModel"
             NavigationPage.HasNavigationBar="False">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

            <VerticalStackLayout Margin="0,0,0,140">
                <Label Text="Bienvenido" FontSize="36" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,70,0,0"/>
                <Label Text="Iniciar Sesión para empezar" FontSize="16" TextColor="Grey" HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Margin="0,-90,0,0">
                <Frame
               HasShadow="True"
               CornerRadius="50"
               Padding="10"
               Margin="0,0,0,50"
               BackgroundColor="White"
                WidthRequest="280"
                HeightRequest="45">
                    <Frame.Shadow>
                        <Shadow
                      Brush="#000000"
                      Opacity="0.3"
                      Offset="5,5"
                      Radius="50"/>
                    </Frame.Shadow>
                    <HorizontalStackLayout>
                        <Image Source="google.png" HorizontalOptions="Start" WidthRequest="25" HeightRequest="25"/>
                        <Label Text="Continuar con Google" HorizontalOptions="Center" Margin="25,0,0,0" FontSize="17"  />
                    </HorizontalStackLayout>
                </Frame>

            </VerticalStackLayout>

            <Frame WidthRequest="420" HeightRequest="800" CornerRadius="25" Margin="0,0,0,-120">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1335D0" Offset="1.0" />
                        <GradientStop Color="#1335D0" Offset="0.1" />
                    </LinearGradientBrush>
                </Frame.Background>

                <VerticalStackLayout>
                    <ScrollView>
                        <StackLayout>
                    <Entry x:Name="fullNameEntry"
                        Text="{Binding NombreCompleto}"
                        Placeholder="Ingresa tu nombre completo"
                        PlaceholderColor="White"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="50"
                        Margin="0,30,0,0"
                        WidthRequest="320"
                        BackgroundColor="Transparent"
                        />

                    <Entry x:Name="UsernameEntry"
                           Text="{Binding Username}"
                Placeholder="Usuario"
                PlaceholderColor="White"
                TextColor="White"
                FontSize="16"
                HeightRequest="50"
                Margin="0,30,0,0"
                WidthRequest="320"
                BackgroundColor="Transparent"
                />

                    <Entry x:Name="EmailEntry"
                        Text="{Binding Correo}"
                        Placeholder="Correo electrónico"
                        PlaceholderColor="White"
                        TextColor="White"
                        FontSize="16"
                        HeightRequest="50"
                        Margin="0,30,0,0"
                        WidthRequest="320"
                        BackgroundColor="Transparent"/>


                    <Entry x:Name="PasswordEntry"
                       Text="{Binding Contraseña}"    
                       Placeholder="Contraseña"
                       FontSize="16"
                       IsPassword="True"
                       HeightRequest="50"
                       WidthRequest="320"
                       Margin="0,20,0,0"
                       PlaceholderColor="White"
                       TextColor="White"
                       BackgroundColor="Transparent"
                       />

                    <Entry x:Name="RepeatPasswordEntry"
                 Text="{Binding RepetirContraseña}"
                 Placeholder="Repetir Contraseña"
                 FontSize="16"
                 IsPassword="True"
                 HeightRequest="50"
                 WidthRequest="320"
                 Margin="0,20,0,0"
                 PlaceholderColor="White"
                 TextColor="White"
                 BackgroundColor="Transparent"
                 />

                    <Picker x:Name="comboBox" 
                Title="Tipo de usuario" 
                 ItemsSource="{Binding TiposUsuario}"
                 SelectedItem="{Binding TipoSeleccionado, Mode=TwoWay}"
                 FontSize="16"
                 HeightRequest="50"
                 WidthRequest="320"
                 Margin="0,20,0,0"
                 TextColor="#fff"
                 TitleColor="#fef"
                 BackgroundColor="Transparent">
                    </Picker>

                    <Picker x:Name="comboBoxDepartamento" 
                    Title="Departamento" 
                    ItemsSource="{Binding Departamentos}"
                    SelectedItem="{Binding Departamento, Mode=TwoWay}"
                    FontSize="16"
                    HeightRequest="50"
                    WidthRequest="320"
                    Margin="0,20,0,0"
                    TextColor="#fff"
                    TitleColor="#fef"
                    BackgroundColor="Transparent">
                    </Picker>

                    <Label HorizontalOptions="End" Text="Olvidaste tu contraseña?" Background="Transparent" TextColor="White" BackgroundColor="Transparent" Margin="0,0,20,0"/>

                    <Button 
                    x:Name="btnRegister"
                    Text="Continuar"
                        FontSize="18"
                        BackgroundColor="#9D9D9D"
                        TextColor="White"
                        Margin="0,30,0,0"
                        WidthRequest="280"
                        HeightRequest="43"
                        CornerRadius="50"
                        Command="{Binding RegistrarUsuarioCommand}"
                        />
                        </StackLayout>
                    </ScrollView>
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label  Text="Tienes una cuenta?" Margin="0,15,0,0" FontSize="16" Padding="-4" TextColor="White"/>
                        <Button x:Name="btnLogin" Text="Iniciar Sesión!" FontSize="16" Background="Transparent"  TextColor="White"  Margin="0,0,0,0" Clicked="btnLogin_Clicked"/>
                    </HorizontalStackLayout>
                   
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>