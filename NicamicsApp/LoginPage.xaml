<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NicamicsApp.LoginPage"
             xmlns:viewmodel="clr-namespace:NicamicsApp.ViewModels"
             x:DataType="viewmodel:LoginViewModel"
             NavigationPage.HasNavigationBar="False">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <VerticalStackLayout Margin="0,0,0,140">
            <Label Text="Bienvenido" FontSize="36" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,70,0,0"/>
            <Label Text="Iniciar Sesión para empezar" FontSize="16" TextColor="Grey" HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <VerticalStackLayout Margin="0,-90,0,0">
            <Frame
               HasShadow="True"
               CornerRadius="50"
               Padding="10"
               Margin="0,0,0,50"
               BackgroundColor="White"
                WidthRequest="280"
                HeightRequest="45">
                <Frame.Shadow>
                    <Shadow
                      Brush="#000000"
                      Opacity="0.3"
                      Offset="5,5"
                      Radius="50"/>
                </Frame.Shadow>
                <HorizontalStackLayout>
                    <Image Source="google.png" HorizontalOptions="Start" WidthRequest="25" HeightRequest="25"/>
                    <Label Text="Continuar con Google" HorizontalOptions="Center" Margin="25,0,0,0" FontSize="17"  />
                </HorizontalStackLayout>
            </Frame>
           
        </VerticalStackLayout>

        <Frame WidthRequest="395" HeightRequest="600" CornerRadius="25" Margin="0,50,0,0">
            <Frame.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1335D0" Offset="1.0" />
                    <GradientStop Color="#1335D0" Offset="0.1" />
                </LinearGradientBrush>
            </Frame.Background>

            <VerticalStackLayout>
                <Entry x:Name="UsernameEntry"
                       Text="{Binding Correo}"
                       Placeholder="Correo Electrónico"
                       PlaceholderColor="White"
                       TextColor="White"
                       FontSize="16"
                       HeightRequest="50"
                       Margin="0,30,0,0"
                       WidthRequest="320"
                       BackgroundColor="Transparent"
                       />

                <Entry x:Name="PasswordEntry"
                       Text="{Binding Contraseña}"
                       Placeholder="Contraseña"
                       FontSize="16"
                       IsPassword="True"
                       HeightRequest="50"
                       WidthRequest="320"
                       Margin="0,20,0,0"
                       PlaceholderColor="White"
                       TextColor="White"
                       BackgroundColor="Transparent"
                       />

                <Button x:Name="btnRestablecer" Text="Olvidaste tu contraseña?" FontSize="16" Background="Transparent"  TextColor="White"  Margin="0,0,20,0" HorizontalOptions="End"
                        Clicked="btnRestablecer_Clicked"/>

               
                <Button Text="Iniciar sesión"
                        FontSize="18"
                        BackgroundColor="#9D9D9D"
                        TextColor="White"
                        Margin="0,30,0,0"
                        WidthRequest="280"
                        HeightRequest="43"
                        CornerRadius="50"
                        Command="{Binding IniciarSesionCommand}"/>
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label  Text="No tienes una cuenta?" Margin="0,15,0,0" FontSize="16" Padding="-4" TextColor="White"/>
                    <Button x:Name="btnRegister" Text="Registrate!" FontSize="16" Background="Transparent"  TextColor="White"  Margin="0,0,0,0"  Command="{Binding NavegarHaciaRegistroCommand}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

        </Frame>

    </VerticalStackLayout>
</ContentPage>
