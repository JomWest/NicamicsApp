<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NicamicsApp.RestablecerContraseña"
             Title="RestablecerContraseña">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">

        <!-- Título -->
        <Label Text="Restablecer Contraseña" 
               FontSize="Title" 
               HorizontalOptions="Center" />

        <!-- Campo de correo electrónico -->
        <Entry x:Name="EmailEntry" 
               Placeholder="Ingresa tu correo electrónico" 
               Keyboard="Email" 
               TextColor="Black"
               PlaceholderColor="Gray" />

        <!-- Botón para enviar solicitud de restablecimiento -->
        <Button Text="Enviar solicitud"
                BackgroundColor="#007AFF"
                TextColor="White"
                Clicked="Button_Clicked"
                />

    </VerticalStackLayout>

</ContentPage>